<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="tableAnchorPane" prefHeight="388.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Articoli">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openDifferentManagement" text="Articoli in magazzino" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Fornitura">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openDifferentManagement" text="Lista fornitori" />
                  <MenuItem disable="true" mnemonicParsing="false" onAction="#openDifferentManagement" text="Storico forniture" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Clienti">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openDifferentManagement" text="Lista clienti" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Ordini">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openDifferentManagement" text="Storico ordini" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Menu principale">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openDifferentManagement" text="Apri menu principale" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="suppliesTable" layoutX="25.0" layoutY="82.0" prefHeight="237.0" prefWidth="552.0">
        <columns>
            <TableColumn fx:id="supplyColumn" prefWidth="99.0" text="Codice fornitura" />
          <TableColumn fx:id="supplierColumn" prefWidth="99.0" text="Codice fornitore" />
          <TableColumn fx:id="itemColumn" prefWidth="92.0" text="Codice articolo" />
            <TableColumn fx:id="priceColumn" minWidth="5.0" prefWidth="72.0" text="Prezzo" />
            <TableColumn fx:id="dateColumn" prefWidth="89.0" text="Data fornitura" />
            <TableColumn fx:id="amountColumn" prefWidth="97.0" text="Quantita" />
        </columns>
      </TableView>
      <Label alignment="CENTER" layoutX="46.0" layoutY="45.0" prefHeight="20.0" prefWidth="508.0" text="Lista delle forntiure fino ad oggi">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="addButton" layoutX="505.0" layoutY="337.0" mnemonicParsing="false" onAction="#displayAddView" prefHeight="25.0" prefWidth="72.0" text="Aggiungi" />
      <Button fx:id="deleteButton" disable="true" layoutX="410.0" layoutY="337.0" mnemonicParsing="false" onAction="#deleteRow" prefHeight="25.0" prefWidth="72.0" text="Elimina" />
      <Button fx:id="searchButton" layoutX="313.0" layoutY="337.0" mnemonicParsing="false" onAction="#displaySearchView" prefHeight="25.0" prefWidth="72.0" text="Ricerca" />
      <Button fx:id="backButton" disable="true" layoutX="25.0" layoutY="337.0" mnemonicParsing="false" onAction="#exitSearchView" prefHeight="25.0" prefWidth="72.0" text="Indietro" visible="false" />
   </children>
</AnchorPane>
